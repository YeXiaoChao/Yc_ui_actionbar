<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yanis.actionbar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".MainActivity"
            android:label="召唤ActionBar吧"
            android:logo="@drawable/cnblog_icon" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yanis.actionbar.TabActivity"
            android:label="Tab导航" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yanis.actionbar.MainActivity" />
        </activity>
        <activity
            android:name="com.yanis.actionbar.CustomActivity"
            android:label="自定义样式"
            android:parentActivityName="com.yanis.actionbar.MainActivity"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name="com.yanis.actionbar.ListActivity"
            android:label="下拉列表导航"
            android:parentActivityName="com.yanis.actionbar.MainActivity" >
        </activity>
    </application>

</manifest>